#include <stdio.h>
#include <stdlib.h>


int main(){
    
    char pais1[50];
    char pais2[50]; 
    char estado1[50];
    char estado2[50];
    char codigo1[3];
    char codigo2[50];
    char cidade1[50];
    char cidade2[50];
    unsigned long int populacao1, populacao2;
    float area1, area2;
    float pib1, pib2;
    int turismo1, turismo2;
    float densidade1, densidade2;
    float pib_capita1, pib_capita2;
    int opcao;
    int comparacao1, comparacao2;
    float valorA1, valorA2, valorB1, valorB2;
    float soma, soma1, soma2;

    printf("Para comecar o jogo, selecione a opcao desejada de acordo com o numero da opcao: \n");
    printf("1. *Iniciar jogo SuperTrunfo*\n");
    printf("2. *Sair do Jogo*\n");
    scanf("%d", &opcao);
    
    switch (opcao)
    {
    case 1:
    
    printf("Para poder prosseguir com o jogo, insira os valores das cartas abaixo: \n");
    printf("\n");
    
        ///////////// CARTA 1 /////////////
        
        printf("carta 1: \n"); 
        
            printf("digite o País: ");
            scanf("%s", pais1);
            
            printf("digite o estado: ");
            scanf("%s", estado1);
            
            printf("digite o codigo da carta: ");
            scanf("%s", codigo1);
            
            printf("digite o nome da cidade: ");
            scanf("%s", cidade1);   
            
            printf("qual a populacao da cidade?: ");
            scanf("%lu", &populacao1);   
            
            printf("digite a area da cidade em Km quadrados: ");
            scanf("%f", &area1);
            
            printf("qual o pib da sua cidade? (Em bilhoes de reais)");
            scanf("%f", &pib1);
            
            printf("quantos pontos turisticos existem em sua cidade? ");
            scanf("%d", &turismo1);

            densidade1 = populacao1 / area1;
            pib_capita1 = (pib1 * 1000000000.0f) / populacao1;

            printf("\n");

        ///////////     CARTA 2   ////////////
    
        printf("carta 2: \n"); 
        
            printf("digite o País: ");
            scanf("%s", pais2);
            
            printf("digite o estado: ");
            scanf("%s", estado2);
            
            printf("digite o codigo da carta: ");
            scanf("%s", codigo2);
            
            printf("digite o nome da cidade: ");
            scanf("%s", cidade2);   
            
            printf("qual a populacao da cidade?: ");
            scanf("%lu", &populacao2);   
            
            printf("digite a area da cidade em KM quadrados: ");
            scanf("%f", &area2);
            
            printf("qual o pib da sua cidade? ");
            scanf("%f", &pib2);
            
            printf("quantos pontos turisticos existem em sua cidade? ");
            scanf("%d", &turismo2);

            densidade2 = (float)populacao2 / area2;
            pib_capita2 = (pib2 * 1000000000.0f) / (float)populacao2;


            
        printf("Os valores das cartas selecionadas sao: \n");
            
            //Carta 1 
            printf("Carta 1: \n");
            printf("País: %s\n", pais1);
            printf("Estado: %s\n", estado1); 
            printf("Codigo da carta: %s\n", codigo1);
            printf("Cidade: %s\n", cidade1);
            printf("Populacao: %lu\n", populacao1);
            printf("KM quadrado: %.2f km²\n", area1);
            printf("Pib: R$%.2f bilhoes\n", pib1); 
            printf("Pontos turisticos: %d\n", turismo1);
            printf("Densidade: %.2f\n", densidade1);
            printf("Pib per capita: %.2f\n", pib_capita1);

            printf("\n");
            //Carta 2
            printf("Carta 2: \n");
            printf("País: %s\n", pais2);
            printf("Estado: %s\n", estado2); 
            printf("Codigo da carta: %s\n", codigo2);
            printf("Cidade: %s\n", cidade2);
            printf("Populacao: %lu\n", populacao2);
            printf("KM quadrado: %.2f km²\n", area2);
            printf("Pib: R$%.2f bilhoes\n", pib2); 
            printf("Pontos turisticos: %d\n", turismo2);
            printf("Densidade: %.2f\n", densidade2);
            printf("Pib per capita: %.2f\n", pib_capita2);

        
            printf("\n");

        
                printf("Digite o primeiro atributo que voce quer comparar: \n");
                printf("1. Populacao:\n");
                printf("2. Area: \n");
                printf("3. PIB: \n");
                printf("4. Pontos turisticos: \n");
                printf("5. Densidade demografica: \n");
                scanf("%d", &comparacao1);
                printf("Digite o segundo atributo de comparacao: ");
                scanf("%d", &comparacao2);

                if (comparacao1 == comparacao2)
                {
                    printf("Atributos iguais, escolha outro:");
                    scanf("%d", &comparacao2);
                }

            switch (comparacao1) {
                
                case 1:
                valorA1 = populacao1;
                valorB1 = populacao2;
                printf("Categoria selecionada: Populacao. \nCarta 1 - Pais: %s \nPopulacao: %lu\n",pais1, populacao1);
                printf("Carta 2 - Pais: %s \nPopulacao: %lu",pais2, populacao2); 
                printf("\n");
                if (populacao1 > populacao2)
                        printf("Carta 1 ganhou na categoria - Populacao: %lu\n", populacao1);
                    else if (populacao1 == populacao2) 
                        printf("Empatou!\n");
                    else if (populacao2 > populacao1) 
                        printf("Carta 2 ganhou na categoria - Populacao: %lu\n", populacao2);
                    break;
                
                case 2:
                valorA1 = area1;
                valorB1 = area2;
                printf("Categoria selecionada: Area. \nCarta 1 - Pais: %s \nArea: %f\n",pais1, area1);
                printf("Carta 2 - Pais: %s \nArea: %f",pais2, area2); 
                printf("\n");
                if (area1 > area2)
                        printf("Carta 1 ganhou na categoria - Area: %f\n", area1);
                    else if (area1 == area2) 
                        printf("Empatou!\n");
                    else if (area2 > area1) 
                        printf("Carta 2 ganhou na categoria - Area: %f\n", area2);
                    break;
                
                case 3:
                valorA1 = pib1;
                valorB1 = pib2;
                printf("Categoria selecionada: PIB. \nCarta 1 - Pais: %s \nPIB: %f\n",pais1, pib1);
                printf("Carta 2 - Pais: %s \nPIB: %f",pais2, pib2); 
                printf("\n");
                if (pib1 > pib2)
                        printf("Carta 1 ganhou na categoria - PIB: %f\n", pib1);
                    else if (pib1 == pib2) 
                        printf("Empatou!\n");
                    else if (pib2 > pib1) 
                        printf("Carta 2 ganhou na categoria - PIB: %f\n", pib2);
                    break;
                
                case 4:
                valorA1 = turismo1;
                valorB1 = turismo2;
                printf("Categoria selecionada: Pontos turisticos. \nCarta 1 - Pais: %s \nPontos turisticos: %d\n",pais1, turismo1);
                printf("Carta 2 - Pais: %s \nPontos turisticos: %d",pais2, turismo2); 
                printf("\n");
                if (turismo1 > turismo2)
                        printf("Carta 1 ganhou na categoria - Pontos turisticos: %d\n", turismo1);
                    else if (turismo1 == turismo2) 
                        printf("Empatou!\n");
                    else if (turismo2 > turismo1) 
                        printf("Carta 2 ganhou na categoria - Pontos turisticos: %d\n", turismo2);
                    break;
                
                case 5:
                valorA1 = densidade1;
                valorB1 = densidade2;
                printf("Categoria selecionada: Densidade Demografica. \nCarta 1 - Pais: %s \nDensidade Demografica: %f\n",pais1, densidade1);
                printf("Carta 2 - Pais: %s \nDensidade Demografica: %f",pais2, densidade2); 
                printf("\n");
                if (densidade2 > densidade1)
                        printf("Carta 1 ganhou na categoria - Densidade Demografica: %f\n", pib1);
                    else if (densidade1 == densidade2) 
                        printf("Empatou!\n");
                    else if (densidade1 > densidade2) 
                        printf("Carta 2 ganhou na categoria - Densidade Demografica: %f\n", pib2);
                    break;
            }
                printf("\n");
                switch (comparacao2) {

                case 1:
                valorA2 = populacao1;
                valorB2 = populacao2;
                printf("Categoria selecionada: Populacao. \nCarta 1 - Pais: %s \nPopulacao: %lu\n",pais1, populacao1);
                printf("Carta 2 - Pais: %s \nPopulacao: %lu",pais2, populacao2); 
                printf("\n");
                if (populacao1 > populacao2)
                        printf("Carta 1 ganhou na categoria - Populacao: %lu\n", populacao1);
                    else if (populacao1 == populacao2) 
                        printf("Empatou!\n");
                    else if (populacao2 > populacao1) 
                        printf("Carta 2 ganhou na categoria - Populacao: %lu\n", populacao2);
                    break;
                
                case 2:
                valorA2 = area1;
                valorB2 = area2;
                printf("Categoria selecionada: Area. \nCarta 1 - Pais: %s \nArea: %f\n",pais1, area1);
                printf("Carta 2 - Pais: %s \nArea: %f",pais2, area2); 
                printf("\n");
                if (area1 > area2)
                        printf("Carta 1 ganhou na categoria - Area: %f\n", area1);
                    else if (area1 == area2) 
                        printf("Empatou!\n");
                    else if (area2 > area1) 
                        printf("Carta 2 ganhou na categoria - Area: %f\n", area2);
                    break;
                
                case 3:
                valorA2 = pib1;
                valorB2 = pib2;
                printf("Categoria selecionada: PIB. \nCarta 1 - Pais: %s \nPIB: %f\n",pais1, pib1);
                printf("Carta 2 - Pais: %s \nPIB: %f",pais2, pib2); 
                printf("\n");
                if (pib1 > pib2)
                        printf("Carta 1 ganhou na categoria - PIB: %f\n", pib1);
                    else if (pib1 == pib2) 
                        printf("Empatou!\n");
                    else if (pib2 > pib1) 
                        printf("Carta 2 ganhou na categoria - PIB: %f\n", pib2);
                    break;
                
                case 4:
                valorA2 = turismo1;
                valorB2 = turismo2;
                printf("Categoria selecionada: Pontos turisticos. \nCarta 1 - Pais: %s \nPontos turisticos: %d\n",pais1, turismo1);
                printf("Carta 2 - Pais: %s \nPontos turisticos: %d",pais2, turismo2); 
                printf("\n");
                if (turismo1 > turismo2)
                        printf("Carta 1 ganhou na categoria - Pontos turisticos: %d\n", turismo1);
                    else if (turismo1 == turismo2) 
                        printf("Empatou!\n");
                    else if (turismo2 > turismo1) 
                        printf("Carta 2 ganhou na categoria - Pontos turisticos: %d\n", turismo2);
                    break;
                
                case 5:
                valorA2 = densidade1;
                valorB2 = densidade2;
                printf("Categoria selecionada: Densidade Demografica. \nCarta 1 - Pais: %s \nDensidade Demografica: %f\n",pais1, densidade1);
                printf("Carta 2 - Pais: %s \nDensidade Demografica: %f",pais2, densidade2); 
                printf("\n");
                if (densidade2 > densidade1)
                        printf("Carta 1 ganhou na categoria - Densidade Demografica: %f\n", pib1);
                    else if (densidade1 == densidade2) 
                        printf("Empatou!\n");
                    else if (densidade1 > densidade2) 
                        printf("Carta 2 ganhou na categoria - Densidade Demografica: %f\n", pib2);
                    break;
                }
                printf ("Resultado:\n");

                soma1 = valorA1 + valorA2;
                soma2 = valorB1 + valorB2;
                (soma1 > soma2) ? printf("A Carta 1 venceu o jogo!\n") : (soma2 > soma1) ? printf("A carta 2 Venceu!\n") : printf("Empate!\n");
            break;
    
                    
                case 2: {
            printf("Fim de jogo!\n");
            break;
            }
                
        default: 
            printf("Opcao invalida!");
            break;
        }
        
    
 return 0;
    
    }
